<Page x:Class="SearchNumbers.Pages.OzonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SearchNumbers.Pages" xmlns:viewmodel="clr-namespace:SearchNumbers.MVVM.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OzonPage">

    <Page.DataContext>
        <viewmodel:OzonModel/>
    </Page.DataContext>
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
            FontWeight="Medium"
            FontFamily="Montserrat"
            TextWrapping="Wrap"
            Text="{Binding Info}">
            </TextBlock>
        <Button Grid.Row="1"
                Height="50"
                Width="200"
                FontSize="20"
                FontWeight="Medium"
                FontFamily="Montserrat"
                Command="{Binding CommandGetInfo}">
               Получить инфу
        </Button>

    </Grid>
</Page>
